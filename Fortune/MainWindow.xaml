<Window x:Class="Fortune.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fortune"
        mc:Ignorable="d"
        Title="Fortune" Height="500" Width="800" Icon="Resources/FortunePictIco.ico" Visibility="Visible" MinHeight="500" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Background="#20B2AA">
            <Button Name="BtnBack" Click="BtnBack_Click" Content="Назад" HorizontalAlignment="Right" Width="150"></Button> 
        </Grid>
        <Frame Grid.Row="0" Name="BaseFrame" NavigationUIVisibility="Hidden" ContentRendered="BaseFrame_ContentRendered" Grid.RowSpan="2"></Frame>
    </Grid>
</Window>
