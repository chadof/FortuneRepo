<Page x:Class="Fortune.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fortune.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Image Source="/Resources/FortunePict.png" Height="100"></Image>
            <TextBlock Margin="5" FontSize="32">Авторизация</TextBlock>
            <TextBlock Margin="5">Логин</TextBlock>
            <TextBox Name="txtbLog" Margin="5"></TextBox>
            <TextBlock Margin="5">Пароль</TextBlock>
            <PasswordBox Name="passbPass"></PasswordBox>
            <Button Name="btnLogIn" Content="Войти" Width="150" Click="btnLogIn_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
