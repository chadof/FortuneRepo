<Page x:Class="Fortune.Pages.AddServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fortune.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddServicePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <TextBlock>Название</TextBlock>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0">
            <TextBlock>Стоимость</TextBlock>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1">
            <TextBox Name="txtbFirstName" Text="{Binding Name}"></TextBox>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <TextBox Name="txtbLastName" Text="{Binding Cost}"></TextBox>
        </Grid>
        <Grid Grid.Row="5" Grid.ColumnSpan="2">
            <Button Name="btnSaveService" Click="btnSaveService_Click">Сохранить</Button>
        </Grid>
    </Grid>
    
</Page>
